{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "module": "NodeNext",
    "sourceMap": true,
    "outDir": "lib",
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "ES2018.AsyncGenerator",
      "es2021.weakref"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.*"]
}
